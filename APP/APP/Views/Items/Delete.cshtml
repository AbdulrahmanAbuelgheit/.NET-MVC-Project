@model Item
@{
    ViewData["Title"] = "Delete";
}


<form method="post" >
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
      
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name"  disabled class="form-control" />
          
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        
        </div>
        <div>
            <label  asp-for="CategoryId"></label>
            <select asp-for="CategoryId" disabled class="form-control" asp-items="@ViewBag.CategoryList">
               
            </select>
        </div>
        <br />
        <hr />
        <div>
            <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
            <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">Back to Items</a>
        </div>
    </div>
</form>
